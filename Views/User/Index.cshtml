@model BeltTemplate.ViewModels.LoginRegViewModel;

<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />
    <title>Login and Registration</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Welcome to the Dojo Activity Center</h1>
        <h2>Registration</h2>
        <form asp-action="NewUser" method="POST">
            <span class="offset-sm-2 error" asp-validation-for="Register.FirstName"></span>
            <div class="form-group row">
                <label class="col-sm-2">First Name:</label>
                <input class="form-control col-sm-8" type="text" asp-for="Register.FirstName" placeholder="First Name">
            </div>
            <span class="offset-sm-2 error" asp-validation-for="Register.LastName"></span>
            <div class="form-group row">
                <label class="col-sm-2">Last Name:</label>
                <input class="form-control col-sm-8" type="text" asp-for="Register.LastName" placeholder="Last Name">
            </div>
            <span class="offset-sm-2 error" asp-validation-for="Register.Email"></span>
            <div class="form-group row">
                <label class="col-sm-2">Email:</label>
                <input class="form-control col-sm-8" type="text" asp-for="Register.Email" placeholder="Email">
            </div>
            <span class="offset-sm-2 error" asp-validation-for="Register.Password"></span>
            <div class="form-group row">
                <label class="col-sm-2">Password:</label>
                <input class="form-control col-sm-8" type="password" asp-for="Register.Password" placeholder="Password">
            </div>
            <span class="offset-sm-2 error" asp-validation-for="Register.ConfirmPassword"></span>
            <div class="form-group row">
                <label class="col-sm-2">Confirm Password:</label>
                <input class="form-control col-sm-8" type="password" asp-for="Register.ConfirmPassword" placeholder="Password Confirm">
            </div>
            <div class="form-group row">
                <input class="btn btn-outline-primary" type="submit" value="Register">
            </div>
        </form>
    </div>
    <div class="container">
        <h2>Login</h2>
        <form action="LoginUser" method="POST">
            <span class="offset-sm-2 error" asp-validation-for="Login.Email"></span>
            <div class="form-group row">
                <label class="col-sm-2">Email:</label>
                <input class="form-control col-sm-8" type="text" asp-for="Login.Email" placeholder="Email">
            </div>
            <span class="offset-sm-2 error" asp-validation-for="Login.Password"></span>
            <div class="form-group row">
                <label class="col-sm-2">Password:</label>
                <input class="form-control col-sm-8" type="password" asp-for="Login.Password" placeholder="Password">
            </div>
            <div class="form-group row">
                <input class="btn btn-outline-primary" type="submit" value="Login">
            </div>
        </form>
    </div>
</body>
</html>