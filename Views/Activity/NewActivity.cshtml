@model BeltTemplate.ViewModels.ActivityViewModel;

<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />
    <title>Index</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous'>
    <link rel='stylesheet' type='text/css' media='screen' href='~/css/style.css' />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Dojo Activity Center</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navBarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navBarCollapse">
            <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/new">Add new Activity</a>
            </li>
            </ul>
        </div>
        <p>Welcome @ViewBag.currUser.FirstName!</p>
        <a href="/logout">Log out</a>
    </nav>
    <div class="container">
        <h2 class="title">Create an Activity!</h2>
        <form asp-action="AddActivity" method="post">
            <div class="form-row">
                <div class="col-sm-1">
                    <label>Title:</label>
                </div>
                <div class="col-sm-4">
                    <span class="error" asp-validation-for="Title"></span>
                    <input class="form-control" type="text" asp-for="Title">
                </div>
                <div class="col-sm-1 offset-sm-1">
                    <label>Time:</label>
                </div>
                <div class="col-sm-4">
                    <span class="error" asp-validation-for="Time"></span>
                    <input class="form-control" type="time" asp-for="Time">
                </div>
            </div>
            <div class="form-row">
                <div class="col-sm-1">
                    <label>Date:</label>
                </div>
                <div class="col-sm-4">
                    <span class="error" asp-validation-for="Date"></span>
                    <input class="form-control" type="date" asp-for="Date">
                </div>
                <div class="col-sm-1 offset-sm-1">
                    <label>Duration:</label>
                </div>
                <div class="col-sm-3">
                    <span class="error" asp-validation-for="DurationInt"></span>
                    <input class="form-control" type="text" asp-for="DurationInt">
                </div>
                <div class="col-sm-1">
                    <span class="error" asp-validation-for="DurationString"></span>
                    <select class="form-control" asp-for="DurationString">
                        <option value="Days">Days</option>
                        <option value="Hours">Hours</option>
                        <option value="Minutes">Minutes</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="col-sm-1">
                    <label>Description</label>
                </div>
                <div class="col-sm-10">
                    <span class="error" asp-validation-for="Description"></span>
                    <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                </div>
            </div>
            <input class="btn btn-success" type="submit" value="Add Activity">
        </form>
    </div>
</body>
</html>